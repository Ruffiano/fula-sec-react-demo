{
  "compilerOptions": {
    "downlevelIteration": true,
    "outDir": "./lib/esm",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["ES2019", "esnext", "dom"],
    "target": "ES2019",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "skipLibCheck": true,
  },
  "paths": {
    "*": ["types/*"]
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  },
  "include": [
    "src/**/*",
    "lib/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    // "lib",
    "__tests__"
  ],
  "typeRoots": [
    "../../node_modules/@types/index.d.ts"
  ]
}
